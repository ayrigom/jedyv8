{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.shinobi_disassembler": {
			"initial_state": "first_person",
			"states": {
				"first_person": {
					"animations": [
						{
							"shinobi_disassembler_first_person": "c.item_slot == 'main_hand'"
						}
					],
					"transitions": [
						{
							"third_person": "!c.is_first_person"
						}
					]
				},
				"third_person": {
					"animations": [ "shinobi_disassembler_third_person" ],
					"transitions": [
						{
							"first_person": "c.is_first_person"
						}
					]
				}
			}
		}
	}
}
